<h1>タスク一覧</h1>

<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<% end %>

<% if @tasks.any? %>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th width="70">id</th>
        <th width="200">ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>


<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>